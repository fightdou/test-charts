{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
	    "gen-password": {
            "type": "object",
            "title": "Gen-password Details",
            "form": true,
            "properties": {
                "secretName": {
		            "title": "自动生成密钥名称",
                    "form": true,
                    "type": "string",
                    "description": "Auto generate openstack password secret name",
                    "default": "openstack-password"
                }
            }
        },
        "mariadb": {
            "type": "object",
            "title": "MariaDB Details",
            "form": true,
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "title": "开启mariadb",
                    "form": true,
                    "description": "Whether to deploy a mariadb server to satisfy the applications database requirements. To use an external database switch this off and configure the external database details"
                },
                "architecture": {
                    "form": true,
                    "type": "string",
                    "description": "MariaDB architecture. Allowed values: `standalone` or `replication`",
                    "title": "MariaDB架构",
                    "default": "standalone",
                    "enum": ["standalone", "replication"]
                },
                "auth": {
                    "type": "object",
                    "title": "Mariadb auth",
                    "form": true,
                    "properties": {
                        "existingSecret": {
                            "type": "string",
                            "title": "Use existing secret for password details",
                            "form": true,
                            "hidden": {
                                "value": false,
                                "path": "mariadb/enabled"
                            },
                            "defalut": "openstack-password"
                        }
                    }
                }
            }
        },
        "rabbitmq": {
            "type": "object",
            "title": "Rabbitmq Details",
            "form": true,
            "properties": {
                "enabled": {
                    "form": true,
                    "type": "boolean",
                    "description": "Enable/disable RabbitMQ chart installation",
                    "title": "开启rabbitmq",
                    "default": true
                },
                "auth": {
                    "type": "object",
                    "properties": {
                        "username": {
                            "form": true,
                            "type": "string",
                            "description": "RabbitMQ username",
                            "title": "RabbitMQ用户名",
                            "default": "openstack"
                        },
                        "password": {
                            "form": true,
                            "type": "string",
                            "description": "RabbitMQ password",
                            "title": "RabbitMQ密码",
                            "default": "openstack"
                        }
                    }
                }
            }
        },
        "memcached": {
            "type": "object",
            "title": "Memcached Details",
            "form": true,
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "title": "开启memcached",
                    "form": true,
                    "description": "Whether to deploy a Memcached server."
                }
            }
        },
        "nginx-ingress-controller": {
            "type": "object",
            "title": "Nginx-ingress-controller Details",
            "form": true,
            "properties": {
                "enabled": {
                    "form": true,
                    "title": "开启nginx-ingress-controller",
                    "type": "boolean",
                    "description": "Deploy a ingress controller server",
                    "default": true
                }
            }
        }
    }
}
